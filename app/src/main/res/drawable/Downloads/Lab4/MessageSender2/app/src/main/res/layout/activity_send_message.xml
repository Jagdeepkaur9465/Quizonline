<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendMessageActivity"
    tools:ignore="ExtraText">

    <!-- Increase padding to increase touch target size --><![CDATA[
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/etMessageText"
    android:layout_marginTop="16dp"/>

    ]]><!-- Increase padding to increase touch target size --><![CDATA[
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/etPhoneNumber"
    app:layout_constraintBottom_toTopOf="@+id/btnSendText"
    android:layout_marginTop="16dp"/>



    ]]>

    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="330dp"
        android:layout_height="84dp"
        android:layout_marginTop="124dp"
        android:hint="Phone Number"
        android:inputType="phone"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etMessageText"
        android:layout_width="327dp"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:hint="Message Text"
        android:inputType="textMultiLine"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPhoneNumber"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnSendText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="Send Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMessageText" />

</androidx.constraintlayout.widget.ConstraintLayout>
